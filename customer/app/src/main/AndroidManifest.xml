<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.v2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.V3">
        <activity android:name=".activities.ProductDetailsActivity"></activity>
        <activity
            android:name=".activities.personal.RequestDetailsActivity"
            android:parentActivityName=".activities.personal.OrderRequestsActivity" />
        <activity
            android:name=".activities.personal.OrderRequestsActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.CartInvoiceActivity" />
        <activity
            android:name=".activities.ListProductActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.personal.RegisterActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activities.WelcomeActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.personal.LoginActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".activities.MainActivity" />
    </application>

</manifest>